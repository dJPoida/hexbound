{
  "name": "hexbound",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src/server --watch src/shared --ext ts,json --exec \"cross-env NODE_ENV=development tsx src/server/main.ts\"",
    "build": "node build.cjs",
    "preview": "cross-env NODE_ENV=production node dist/server/main.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "docker:up": "docker compose --env-file .env.local -f docker-compose.yml up -d",
    "docker:down": "docker compose --env-file .env.local down",
    "typeorm": "tsx --env-file=.env.local node_modules/typeorm/cli.js -d src/server/data-source.ts",
    "typeorm:create": "npm run typeorm -- migration:create",
    "typeorm:generate": "npm run typeorm -- migration:generate",
    "typeorm:run": "npm run typeorm -- migration:run",
    "typeorm:run:prod": "node node_modules/typeorm/cli.js -d dist/server/data-source.js migration:run",
    "db:reset": "npm run typeorm -- schema:drop",
    "update:icons": "node scripts/update-icons.mjs"
  },
  "devDependencies": {
    "@types/express": "^4.17.22",
    "@types/node": "^22.15.29",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "nodemon": "^3.1.10",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/pg": "^8.15.4",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "htm": "^3.1.1",
    "pg": "^8.16.0",
    "pixi.js": "^8.10.1",
    "preact": "^10.26.8",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.24",
    "uuid": "^11.1.0",
    "vite": "^6.3.5",
    "ws": "^8.18.2"
  }
}
