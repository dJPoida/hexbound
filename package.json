{
  "name": "hexbound",
  "private": true,
  "version": "0.0.22",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src/server --watch src/shared --ext ts,json --exec \"tsx src/server/main.ts\"",
    "build": "node build.cjs",
    "preview": "NODE_ENV=production node dist/server/main.js",
    "preview-win": "SET \"NODE_ENV=production\" && node dist/server/main.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "docker:up": "docker compose --env-file .env.local -f docker-compose.yml up -d",
    "docker:down": "docker compose --env-file .env.local down"
  },
  "devDependencies": {
    "@types/express": "^4.17.22",
    "@types/node": "^22.15.29",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "nodemon": "^3.1.10",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@types/pg": "^8.15.4",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "htm": "^3.1.1",
    "pg": "^8.16.0",
    "preact": "^10.26.8",
    "redis": "^5.5.5",
    "uuid": "^11.1.0",
    "vite": "^6.3.5"
  }
}
