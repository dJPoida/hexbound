{
  "name": "hexbound",
  "private": true,
  "version": "0.0.15",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src/server --watch src/shared --ext ts,json --exec \"tsx src/server/main.ts\"",
    "build": "npm version patch --no-git-tag-version && node esbuild.config.js && vite build",
    "preview": "NODE_ENV=production node dist/server/main.js",
    "preview-win": "SET \"NODE_ENV=production\" && node dist/server/main.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "start": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build"
  },
  "devDependencies": {
    "@types/express": "^4.17.22",
    "@types/node": "^22.15.29",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "nodemon": "^3.1.10",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "htm": "^3.1.1",
    "preact": "^10.26.8",
    "redis": "^5.5.5",
    "uuid": "^11.1.0",
    "vite": "^6.3.5"
  }
}
